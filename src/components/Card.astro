---
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<div class="card">
  <img src={image} alt={title} />
  <div class="cardContent">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</div>

<style>
  .card {
    container-name: card;
    container-type: inline-size;

    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;

    width: 100%;
    height: 100%;

    &:hover {
      img {
        transform: scale(1.1);
      }
    }

    img {
      width: 100%;
      height: 100%;

      object-fit: cover;

      transition: transform 0.3s ease;
      z-index: 1;
    }

    .cardContent {
      position: relative;
      z-index: 2;
    }
  }

  @container card (width > 320px) {
    .card {
      flex-direction: column;
    }
  }
</style>
